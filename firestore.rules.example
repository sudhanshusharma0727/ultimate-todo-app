// ============================================================
//  Firestore Security Rules — Ultimate Todo App
//  ============================================================
//  Deploy these rules in your Firebase Console:
//  Firebase Console → Firestore → Rules → Paste & Publish
//
//  These rules ensure:
//  ✅ Users can only read/write their own data
//  ✅ Unauthenticated users have zero access
//  ✅ User documents can only be created/modified by the owner
//  ✅ Todo subcollection is scoped to the user
// ============================================================

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Default: deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Users collection
    match /users/{userId} {

      // Only the authenticated user can read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Todos subcollection — only the owner can access
      match /todos/{todoId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // Optional: validate todo document structure
        // allow create: if request.auth != null
        //   && request.auth.uid == userId
        //   && request.resource.data.keys().hasAll(['id', 'text', 'completed', 'date', 'priority', 'project'])
        //   && request.resource.data.text is string
        //   && request.resource.data.text.size() <= 300;
      }
    }
  }
}
